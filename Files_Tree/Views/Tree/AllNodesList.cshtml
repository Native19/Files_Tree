<h2>@ViewBag.Files</h2>





<div class="row mt-5 mb-2">
    @{
        //while ()
        <ul>
            @foreach (var node in Model.getAllNodes)
            {
                <li>
                    <div class="folder">
                        @if (node.status == folderStatus.close)
                        {
                            <div style="float: left;">
                                <img src="~/png/close.png" height=" 20" width="40" />
                            </div>
                        }
                        else
                        {
                            <div style="float: left;">
                                <img src="~/png/open.png" height=" 20" width="40" />
                            </div>
                        }
                        <div style="float: left;">
                            Название папки: @node.nodeName
                        </div>
                    </div>
                </li>
                @if (node.status == folderStatus.open)
                {
                    <ul>
                        @foreach (var file in Model.getAllFiles)
                        {
                            if (file.parentNode == node)
                            {
                                <li>
                                    <div class="file">
                                        <div style="float: left;">
                                            <img src="~/png/file.png" height=" 20" width="25" />
                                        </div>
                                        <div style="float: left;">
                                            Название файла: @file.fileName
                                        </div>
                                    </div>
                                </li>
                            }
                        }
                    </ul>
                }
            }
        </ul>
    }
    var boxes = $('.file');

    boxes.click(function () {
    boxes.removeClass('active');
    $(this).addClass('active');
    })

    .boxWithDataToday.active {
    background: red;
    }
</div>
